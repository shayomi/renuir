# Create .gitignore if it doesn't exist
cat > .gitignore << 'EOF'
# Dependencies
node_modules/
.npm
.pnpm/
pnpm-lock.yaml
yarn.lock
package-lock.json

# Next.js
.next/
out/
dist/
.next/static/chunks/

# Environment variables
.env*.local
.env

# macOS
.DS_Store

# IDE
.vscode/
.idea/

# Logs
logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Temporary files
*.tmp
*.temp

# Build files
build/
coverage/
EOF